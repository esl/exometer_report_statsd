%% -*- erlang -*-

{deps, [{exometer_core, {git, "git://github.com/esl/exometer_core.git", {branch, "master"}}}]}.

{erl_opts,
 [
  debug_info,
  {verbosity, trace}
 ]}.

{sub_dirs, ["src"]}.

{xref_checks,
 [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_functions_calls,
  deprecated_functions
 ]}.

{cover_print_enabled, true}.

{clean_files, ["test/app1/ebin/*.beam"]}.

{ct_use_short_names, true}.
